<%= form_for([:oauth, application]) do |f| %>
  <fieldset>
    <% if application.errors.any? %>
      <div class="alert-message error" data-alert><a class="close" href="#">Ã—</a><p>Whoops! Check your form for possible errors</p></div>
    <% end %>

    <div class="clearfix">
      <%= f.label :name %>
      <div class="input">
        <%= f.text_field :name %>
        <%= errors_for application, :name %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :redirect_uri %>
      <div class="input">
        <%= f.text_field :redirect_uri %>
        <%= errors_for application, :redirect_uri %>
        <% if Doorkeeper.configuration.test_redirect_uri %>
          <span class="help-inline">Use <%= Doorkeeper.configuration.test_redirect_uri %> for local tests</span>
        <% end %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :website %>
      <div class="input">
        <%= f.text_field :website %>
        <%= errors_for application, :website %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :description %>
      <div class="input">
        <%= f.text_area :description %>
        <%= errors_for application, :description %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :listed %>
      <div class="input">
        <%= f.check_box :listed %>
        Check if you want your app to be listed to end users on their profile summary page
        <%= errors_for application, :listed %>
      </div>
    </div>

    <div class="clearfix"></div>

    <div class="actions">
      <%= f.submit :Submit, :class => "btn primary" %>
      <%= link_to "Cancel", oauth_applications_path, :class => "btn" %>
    </div>
  </fieldset>
<% end %>

