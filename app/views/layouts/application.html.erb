<!DOCTYPE html>
<html>
<head>
  <title>Quran.com Profiles</title>
  <%= stylesheet_link_tag    "doorkeeper/application" %>
  <%= javascript_include_tag "doorkeeper/application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <section id="main">
    <div class="topbar">
      <div class="fill">
        <div class="container-fluid">
          <span class="brand">
            <%= link_to "Quran.com Profiles", "/" %>
          </span>
          <% if user_signed_in? %>
          <span style="float: right; padding: 12px 20px 12px;">
            <%= link_to "Sign out", destroy_user_session_path, method: 'DELETE' %>
          </span>
          <% end %>
        </div>
      </div>
    </div>
    <div class="content">
      <% flash.each do |key, message| %>
        <div class="span16">
          <div class="alert-message <%= key %>" data-alert><a class="close" href="#">Ã—</a><p><%= message %></p></div>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </section>

</body>
</html>
